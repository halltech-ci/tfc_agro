<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <template id="custom_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">
                  <div class="page">
                      
                    <style>
                        #custom {
                            border: 1px solid black
                            border-collapse: collapse;
                            border-spacing : 0px;
                            border-top-spacing : 0px;
                        }
                        #custom td, #custom th {
                            border: 1px solid black
                        }
                        #custom tr: {
                            border: 1px solid black
                        }
                        #custom th {
                            style="border: 1px solid black"
                        }
                    </style>
                    <div class="">
                        <t t-foreach="o.warehouse_ids" t-as="warehouse">
                            <br/>
                            <table class="table" id="custom">
                                <tbody>
                                    <tr style="border-top:2px;">
                                        <th>Company</th>
                                        <th>Warehouse</th>
                                        <th>Location</th>
                                        <th>Date</th>
                                        <th>Generated By</th>
                                        <th>Generated Date</th>
                                    </tr>
                                    <tr>
                                        <td style="border: 1.5px solid black"><span t-field="o.company_id.name"/></td>
                                        <td><span t-esc="warehouse.name"/></td>
                                        <td>
                                            <t t-if="o.location_id">
                                                <span t-field="o.location_id.name"/>
                                            </t>
                                            <t t-if="not o.location_id">
                                                <span>All</span>
                                            </t>
                                        </td>
                                        <td><span t-esc="o.start_date"/> To <span t-esc="o.end_date"/></td>
                                        <td><span t-field="user.name"/></td>
                                        <td>
                                            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y')"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            
                            <t t-if="o.stock_position">
                                <p>Stock Postion</p>
                                <table class="table table-condensed" id="custom">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Unit</th>
                                            <th>Initial Stock</th>
                                            <th>Received</th>
                                            <th>Sales</th>
                                            <th>Transfer</th>
                                            <th>Adjustment</th>
                                            <!--<th>Conversion</th>-->
                                            <th>Actual Stock</th>
                                            <th>Total Qty Unit</th>
                                        </tr>
                                    </thead>
                                    <tbody class="invoice_tbody">
                                        <t t-set="sum_begning" t-value="0.0"/>
                                        <t t-set="sum_product_qty_in" t-value="0.0"/>
                                        <t t-set="sum_product_qty_out" t-value="0.0"/>
                                        <t t-set="sum_product_qty_internal" t-value="0.0"/>
                                        <t t-set="sum_product_qty_adjustment" t-value="0.0"/>
                                        <t t-set="total_beg" t-value="0.0"/>
                                        <t t-set="total_rec" t-value="0.0"/>
                                        <t t-set="total_sale" t-value="0.0"/>
                                        <t t-set="total_int" t-value="0.0"/>
                                        <t t-set="total_adjust" t-value="0.0"/>
                                        <t t-set="total_conv" t-value="0.0"/>
                                        <t t-set="total_end" t-value="0.0"/>
                                        <t t-set="total_uom_qty" t-value="0.0"/>
                                        <t t-foreach="get_products(o)" t-as="product">
                                            <t t-set="ending_qty" t-value="0.00"/>
                                            <t t-value="get_beginning_inventory(o,product,warehouses=warehouse)" t-set="product_beg_qty"/>
                                            <t t-value="get_product_sale_qty(o,product,warehouses=warehouse)" t-set="product_val"/>
                                            <t t-set="ending_qty" t-value="product_beg_qty + product_val['product_qty_in'] + product_val['product_qty_out'] + product_val['product_qty_internal']
                                                + product_val['product_qty_adjustment']"
                                            />
                                            <t t-set="today_movment_qty" t-value="product_val['product_qty_in'] + product_val['product_qty_out'] + product_val['product_qty_internal'] + 
                                                    product_val['product_qty_adjustment']"/>
                                            
                                            <tr>
                                                <td><span t-esc="product.name_get()[0][1]"/></td>
                                                <!-- Product unit of mesure-->
                                                <td>
                                                    <span t-esc="product.uom_id.name"/>
                                                </td>
                                                <!-- Initial stock-->
                                                <td>
                                                    <span t-esc="product_beg_qty" t-options="{'widget':'float', 'precision':2}"/>
                                                    <t t-set="sum_begning" t-value="sum_begning + product_beg_qty"/>
                                                </td>
                                                <!--Received -->
                                                <td>
                                                    <span t-esc="product_val['product_qty_in']" t-options="{'widget':'float', 'precision':2}"/>
                                                    <t t-set="sum_product_qty_in" t-value="sum_product_qty_in + product_val['product_qty_in']"/>
                                                </td>
                                                <!-- Sale qty-->
                                                <td>
                                                    <span t-esc="abs(product_val['product_qty_out'])" t-esc-options="{'widget':'float', 'precision':2}"/>
                                                    <t t-set="sum_product_qty_out" t-value="sum_product_qty_out + product_val['product_qty_out']"/>
                                                </td>
                                                <!-- Internal transfert-->
                                                <td>
                                                    <span t-esc="product_val['product_qty_internal']" t-options="{'widget':'float', 'precision':2}"/>
                                                    <t t-set="sum_product_qty_internal" t-value="sum_product_qty_internal + product_val['product_qty_internal']"/>
                                                </td>
                                                <!--Stock adjustment-->
                                                <td>
                                                    <span t-esc="product_val['product_qty_adjustment']" t-options="{'widget':'float', 'precision':2}"/>
                                                    <t t-set="sum_product_qty_adjustment" t-value="sum_product_qty_adjustment + product_val['product_qty_adjustment']"/>
                                                </td>
                                                <!--<td></td>-->
                                                <td>
                                                    <span t-esc="product_beg_qty + product_val['product_qty_in'] + product_val['product_qty_out'] + product_val['product_qty_adjustment']" t-options="{'widget':'float', 'precision':2}"/>
                                                </td>
                                                <td>
                                                    <t t-set="actual_stock" t-value="product_beg_qty + product_val['product_qty_in'] + product_val['product_qty_out'] + product_val['product_qty_adjustment']"/>
                                                    <span t-esc="actual_stock*product.uom_id.factor_inv" t-options="{'widget':'float', 'precision':2}"/>
                                                </td>
                                            </tr>
                                            <t t-set="total_beg" t-value="total_beg + product_beg_qty"/>
                                            <t t-set="total_rec" t-value="total_rec + sum_product_qty_in"/>
                                            <t t-set="total_sale" t-value="total_sale + abs(product_val['product_qty_out'])"/>
                                            <t t-set="total_int" t-value="total_int + product_val['product_qty_internal']"/>
                                            <t t-set="total_adjust" t-value="total_adjust + product_val['product_qty_adjustment']"/>
                                            <t t-set="total_end" t-value="total_end + ending_qty"/>
                                            <t t-set="total_uom_qty" t-value="total_uom_qty + actual_stock*product.uom_id.factor_inv"/>
                                        </t>
                                        <tr>
                                            <td>Total</td>
                                            <td></td>
                                            <td><span t-esc="total_beg" t-options="{'widget':'float', 'precision':2}"/></td>
                                            <td><span t-esc="total_rec" t-options="{'widget':'float', 'precision':2}"/></td>
                                            <td><span t-esc="total_sale" t-options="{'widget':'float', 'precision':2}"/></td>
                                            <td><span t-esc="total_int" t-options="{'widget':'float', 'precision':2}"/></td>
                                            <td><span t-esc="total_adjust" t-options="{'widget':'float', 'precision':2}"/></td>
                                            <!--<td></td>-->
                                            <td><span t-esc="total_end" t-options="{'widget':'float', 'precision':2}"/></td>
                                            <td><span t-esc="total_uom_qty" t-options="{'widget':'float', 'precision':2}"/></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </t>
                            
                            <t t-if="o.sales_report">
                                <p>Sales</p>
                                <table class="table" id="custom">
                                    <thead>
                                        <tr>
                                            <th>Customer</th>
                                            <th>Product</th>
                                            <th>Unit</th>
                                            <th>Vessel</th>
                                            <th>Terms</th>
                                            <th>Sold Qty</th>
                                            <th>Price</th>
                                            <th>Amount</th>
                                            <th>ADL/BOV</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-set="total_amount" t-value="0.0"/>
                                        <t t-foreach="get_product_move(o).get('sales_move')" t-as="sales"> 
                                            <tr>
                                                <td><span t-esc="sales.move_id.picking_partner_id.name"/></td>
                                                <td><span t-esc="sales.product_id.name"/></td>
                                                <td><span t-esc="sales.move_id.product_uom.name"/></td>
                                                <td><span t-esc="sales.lot_id.name"/></td>
                                                <td>
                                                    <t t-if="sales.move_id.sale_line_id.order_id.payment_term_id">
                                                        <span t-esc="sales.move_id.sale_line_id.order_id.payment_term_id.name"/>
                                                    </t>
                                                    <t t-if="not sales.move_id.sale_line_id.order_id.payment_term_id">
                                                        <span></span>
                                                    </t>
                                                </td>
                                                <td><span t-esc="sales.qty_done" t-options="{'widget':'float', 'precision':2}"/></td>
                                                <td><span t-esc="sales.move_id.sale_line_id.price_unit" t-options="{'widget':'float', 'precision':2}"/></td>
                                                <td><span t-esc="sales.move_id.sale_line_id.price_total" t-options="{'widget':'float', 'precision':2}"/></td>
                                                <td><span t-esc="sales.move_id.sale_line_id.order_id.name"/></td>
                                            </tr>
                                            <t t-set="amount" t-value="sales.move_id.sale_line_id.price_total"/>
                                            <t t-set="total_amount" t-value="total_amount + amount" t-options="{'widget':'float', 'precision':2}"/>
                                        </t>
                                        <tr>
                                            <td>Total</td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td><span t-esc="total_amount" t-options="{'widget':'float', 'precision':2}"/></td>
                                            <td></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </t>
                            
                            <t t-if="o.purchases_report">
                                <p>Purchases</p>
                                <table class="table" id="custom">
                                    <thead>
                                        <tr>
                                            <th>Buyer</th>
                                            <th>Product</th>
                                            <th>Unit</th>
                                            <th>Vessel</th>
                                            <th>Puchase Qty</th>
                                            <th>Price</th>
                                            <th>Amount</th>
                                            <th>Purchase Ref.</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="get_product_move(o).get('purchase_move')" t-as="purchases">
                                            <tr>
                                                <td><span t-esc="purchases.move_id.picking_partner_id.name"/></td>
                                                <td><span t-esc="purchases.product_id.name"/></td>
                                                <td><span t-esc="purchases.move_id.product_uom.name"/></td>
                                                <td><span t-esc="purchases.lot_id.name"/></td>
                                                <td><span t-esc="purchases.qty_done" t-options="{'widget':'float', 'precision':2}"/></td>
                                                <td><span t-esc="purchases.move_id.purchase_line_id.price_unit" t-options="{'widget':'float', 'precision':2}"/></td>
                                                <td><span t-esc="purchases.move_id.purchase_line_id.price_total" t-options="{'widget':'float', 'precision':2}"/></td>
                                                <td><span t-esc="purchases.move_id.purchase_line_id.order_id.name"/></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </t>
                            <t t-if="o.stock_agewise">
                                <p>Stock Age</p>
                                <table class="table" id="custom">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Unit</th>
                                            <th>0-75 Days</th>
                                            <th>75-180 Days</th>
                                            <th>181-360 Days</th>
                                            <th>360 Days+</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="get_products(o)" t-as="product">
                                            <t t-value="get_stock_agewise(product.id)" t-set="stock_age"/>
                                            <tr>
                                                <td><span t-esc="product.name"/></td>
                                                <td><span t-esc="product.uom_name"/></td>
                                                <td><span t-esc="stock_age.get('stock_age_0_75')" t-options="{'widget':'float', 'precision':2}"/></td>
                                                <td><span t-esc="stock_age.get('stock_age_75_180')" t-options="{'widget':'float', 'precision':2}"/></td>
                                                <td><span t-esc="stock_age.get('stock_age_180_360')" t-options="{'widget':'float', 'precision':2}"/></td>
                                                <td><span t-esc="stock_age.get('stock_age_360')" t-options="{'widget':'float', 'precision':2}"/></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </t>
                            
                            <t t-if="o.debtor_agewise">
                                <p>Debtor Agewise Analysis</p>
                                <table class="table" id="custom">
                                    <thead>
                                        <tr>
                                            <th>Customer Name</th>
                                            <th>Amount</th>
                                            <th>0-24 Days</th>
                                            <th>24-30 Days</th>
                                            <th>30-45 Days</th>
                                            <th>45-60 Days+</th>
                                            <th>60-90 Days+</th>
                                            <th>90 Days+</th>
                                            <th>Credit limit</th>
                                            <th>Salesperson</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-value="request.env['res.partner'].search([('customer', '=', True)])" t-set="customers"/>
                                        <t t-foreach="customers" t-as="customer">
                                            <t t-value="customer.id" t-set="customer_id"/>
                                            <tr>
                                                <t t-set="amount" t-value="debtor_age(customer_id).get('amount')"/>
                                                <t t-if="amount != 0">
                                                    <td><span t-esc="customer.name"/></td>
                                                    <td><span t-esc="debtor_age(customer_id).get('amount')" t-options="{'widget':'float', 'precision':2}"/></td>
                                                    <td><span t-esc="debtor_age(customer_id).get('debtor_0_24')" t-options="{'widget':'float', 'precision':2}"/></td>
                                                    <td><span t-esc="debtor_age(customer_id).get('debtor_24_30')" t-options="{'widget':'float', 'precision':2}"/></td>
                                                    <td><span t-esc="debtor_age(customer_id).get('debtor_30_45')" t-options="{'widget':'float', 'precision':2}"/></td>
                                                    <td><span t-esc="debtor_age(customer_id).get('debtor_45_60')" t-options="{'widget':'float', 'precision':2}"/></td>
                                                    <td><span t-esc="debtor_age(customer_id).get('debtor_60_90')" t-options="{'widget':'float', 'precision':2}"/></td>
                                                    <td><span t-esc="debtor_age(customer_id).get('debtor_90')" t-options="{'widget':'float', 'precision':2}"/></td>
                                                    <td><span t-esc="customer.credit_limit" t-options="{'widget':'float', 'precision':2}"/></td>
                                                    <td>
                                                        <t t-if="customer.user_id">
                                                            <span t-esc="customer.user_id.name"/>
                                                        </t>
                                                        <t t-if="not customer.user_id">
                                                            <span></span>
                                                        </t>
                                                    </td>
                                                </t>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </t>
                            
                            <t t-if="o.customer_agewise">
                                <p>Creditor Anlysis</p>
                                <table class="table" id="custom">
                                    <thead>
                                        <tr>
                                            <th>Company</th>
                                            <th>Amount</th>
                                            <th>0-90 Days</th>
                                            <th>91-180 Days</th>
                                            <th>181-365 Days</th>
                                            <th>365 Days+</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-value="request.env['res.partner'].search([('supplier', '=', True)])" t-set="creditors"/>
                                        <t t-foreach="creditors" t-as="creditor">
                                            <tr>
                                                <t t-set="amount" t-value="creditor_age(creditor.id).get('amount')"/>
                                                <t t-if="amount != 0">
                                                    <td><span t-esc="creditor.name"/></td>
                                                    <td><span t-esc="creditor_age(creditor.id).get('amount')" t-options="{'widget':'float', 'precision':2}"/></td>
                                                    <td><span t-esc="creditor_age(customer_id).get('creditor_0_90')" t-options="{'widget':'float', 'precision':2}"/></td>
                                                    <td><span t-esc="creditor_age(customer_id).get('creditor_90_180')" t-options="{'widget':'float', 'precision':2}"/></td>
                                                    <td><span t-esc="creditor_age(customer_id).get('creditor_180_365')" t-options="{'widget':'float', 'precision':2}"/></td>
                                                    <td><span t-esc="creditor_age(customer_id).get('creditor_365')" t-options="{'widget':'float', 'precision':2}"/></td>
                                                </t>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </t>
                            
                            <p>Check Status Report</p>
                            <table class="table" id="custom">
                                <thead>
                                    <tr>
                                        <th>Partner</th>
                                        <th>Date</th>
                                        <th>Communication</th>
                                        <th>Credit limit</th>
                                        <th>Ammount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="lines" t-value="get_checks(o)"/>
                                    <t t-set="partners" t-value="lines.get('partner')"/>
                                    <t t-set="check_lines" t-value="lines.get('check')"/>
                                    <t t-set="deposit_lines" t-value="lines.get('deposit')"/>
                                    <t t-foreach="partners" t-as="partner">
                                        <t t-set="checks" t-value="check_lines.filtered(lambda c:c.partner_id.id == partner.id)"/>
                                        <t t-set="deposits" t-value="deposit_lines.filtered(lambda d:d.partner_id.id == partner.id)"/>
                                        <tr>
                                            <td><strong>- <span t-esc="partner.name"/></strong></td>
                                        </tr>
                                        <t t-foreach="checks" t-as="check">
                                            <tr><td><span>Check On Hand</span></td></tr>
                                            <tr><td><span t-esc="check.name"/></td></tr>
                                            <tr>
                                                <td><span t-esc="check.date"/></td>
                                                <td><span t-esc="check.name"/></td>
                                                <td><span t-esc="check.ref"/></td>
                                                <td><span t-esc="check.debit"/></td>
                                            </tr>
                                        </t>
                                        <t t-foreach="deposits" t-as="deposit">
                                            <tr><td><span>Check deposit</span></td></tr>
                                            <tr><td><span t-esc="deposit.check_deposit_id.name"/></td></tr>
                                            <tr>
                                                <td><span t-esc="deposit.check_deposit_id.deposit_date"/></td>
                                                <td><span t-esc="deposit.name"/></td>
                                                <td><span t-esc="deposit.ref"/></td>
                                                <td><span t-esc="deposit.debit"/></td>
                                            </tr>
                                        </t>
                                    </t>
                                </tbody>
                            </table>
                            
                            <p>Check On Hand</p>
                            <table class="table" id="custom">
                                <thead>
                                    <tr>
                                        <th>Customer</th>
                                        <th>Partner Bank</th>
                                        <th>Check N°</th>
                                        <th>Date</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="get_payments(o).get('check_on_hand')" t-as="check_on_hand">
                                        <tr>
                                            <td><span t-esc="check_on_hand.partner_id.name"/></td>
                                            <td><span t-esc="check_on_hand.bank_reference"/></td>
                                            <td><span t-esc="check_on_hand.cheque_reference"/></td>
                                            <td><span t-esc="check_on_hand.payment_date"/></td>
                                            <td><span t-esc="check_on_hand.amount" t-options="{'widget':'float', 'precision':0}"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                            
                            <p>Check On Bank</p>
                            <table class="table" id="custom">
                                <thead>
                                    <tr>
                                        <th>Customer</th>
                                        <th>Bank Deposited</th>
                                        <th>Partner Bank</th>
                                        <th>Check N°</th>
                                        <th>Date</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="get_payments(o).get('check_on_bank')" t-as="check_on_bank">
                                        <tr>
                                            <td><span t-esc="check_on_bank.partner_id.name"/></td>
                                            <td><span t-esc="check_on_bank.journal_id.name"/></td>
                                            <td><span t-esc="check_on_bank.bank_reference"/></td>
                                            <td><span t-esc="check_on_bank.cheque_reference"/></td>
                                            <td><span t-esc="check_on_bank.payment_date"/></td>
                                            <td><span t-esc="check_on_bank.amount" t-options="{'widget':'float', 'precision':0}"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                            
                            <p>Funds Received</p>
                            <table class="table" id="custom">
                                <thead>
                                    <tr>
                                        <th>Customer</th>
                                        <th>Bank Deposited</th>
                                        <th>Client Bank</th>
                                        <th>Check N°</th>
                                        <th>Date</th>
                                        <th>Internal Transfer</th>
                                        <th>Amount Receive</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="get_payments(o).get('reconciled_check')" t-as="reconcile">
                                        <t t-set="transter" t-value="reconcile.filtered(lambda r:r.payment_type =='transfer')"/>
                                        <tr>
                                            <td><span t-esc="reconcile.partner_id.name"/></td>
                                            <td><span t-esc="reconcile.journal_id.name"/></td>
                                            <td><span t-esc="reconcile.bank_reference"/></td>
                                            <td><span t-esc="reconcile.cheque_reference"/></td>
                                            <td><span t-esc="reconcile.payment_date"/></td>
                                            <td>
                                                <t t-if="transfert">Yes</t>
                                                <t t-if="not transfer">-</t>
                                            </td>
                                            <td><span t-esc="reconcile.partner_id.name"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                            
                        </t>
                    </div>
                   </div><!-- End Page-->
                </t>
            </t>
        </t>
    </template>
    </data>
</odoo>
